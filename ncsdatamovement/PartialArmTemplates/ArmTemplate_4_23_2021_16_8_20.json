{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ncsdatamovement"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/OrderHistoryFileCon')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "DatafoundationADLS",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"OrdFileName": {
						"type": "string",
						"defaultValue": "ORDHTR_cloud01_2021Apr01.csv.gz"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": {
							"value": "@dataset().OrdFileName",
							"type": "Expression"
						},
						"folderPath": {
							"value": "concat('2021/04/',substring(string(@dataset().OrdFileName), 23, 2))",
							"type": "Expression"
						},
						"container": "cntleap"
					},
					"columnDelimiter": "|",
					"compressionCodec": "gzip",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "branch_name",
						"type": "String"
					},
					{
						"name": "branch_code",
						"type": "String"
					},
					{
						"name": "retailer_code",
						"type": "String"
					},
					{
						"name": "retailer_name",
						"type": "String"
					},
					{
						"name": "channel_description",
						"type": "String"
					},
					{
						"name": "dse_code",
						"type": "String"
					},
					{
						"name": "dse_name",
						"type": "String"
					},
					{
						"name": "order_number",
						"type": "String"
					},
					{
						"name": "order_date",
						"type": "String"
					},
					{
						"name": "order_type",
						"type": "String"
					},
					{
						"name": "order_status",
						"type": "String"
					},
					{
						"name": "p_code",
						"type": "String"
					},
					{
						"name": "subbf",
						"type": "String"
					},
					{
						"name": "po_number",
						"type": "String"
					},
					{
						"name": "po_date",
						"type": "String"
					},
					{
						"name": "upc",
						"type": "String"
					},
					{
						"name": "account_name",
						"type": "String"
					},
					{
						"name": "qty",
						"type": "String"
					},
					{
						"name": "rlp",
						"type": "String"
					},
					{
						"name": "amount",
						"type": "String"
					},
					{
						"name": "tc_code",
						"type": "String"
					},
					{
						"name": "tc_name",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		}
	]
}